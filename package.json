{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "ethers": "*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "pnsjs",
  "author": "Njoku Emmanuel",
  "description": "A Javascript library for interacting with the PNS smart contract",
  "module": "dist/pnsjs.esm.js",
  "size-limit": [
    {
      "path": "dist/pnsjs.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/pnsjs.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "ethers": "^5.6.1"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.6.0",
    "@ethersproject/providers": "^5.6.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@openzeppelin/contracts": "^4.5.0",
    "@size-limit/preset-small-lib": "^8.1.0",
    "dotenv": "^16.0.3",
    "hardhat": "^2.12.2",
    "husky": "^8.0.2",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3"
  }
}
